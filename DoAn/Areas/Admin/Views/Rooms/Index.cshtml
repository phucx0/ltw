@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model List<DoAn.Models.Cinema.Room>
<div class="admin-page">
    <!-- Tiêu đề -->
    <div class="admin-header">
        <h2 class="admin-title">Quản lý rạp</h2>
    </div>

    <!-- Thanh công cụ -->
    <div class="admin-toolbar">
        <div class="filter-group">
            <div class="filter-item">Tất cả</div>
            <div class="filter-item">Trạng thái</div>
            <div class="filter-item">Sắp xếp</div>
        </div>
        <div class="action-group">
            <button class="btn btn--primary">Thêm mới</button>
        </div>
    </div>

    <!-- Bảng dữ liệu -->
    <table class="table table--dark">
        <thead>
            <tr>
                <th><input type="checkbox" name="name" value="false" /></th>
                <th>Tên chi nhánh</th>
                <th>Tên phòng</th>
                <th>Sức chứa</th>
                <th>Loại</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model)
            {
                <tr>
                    <td><input type="checkbox" name="name" value="false" /></td>
                    <td><p class="movie-title">@room.Branch.Name</p></td>
                    <td><p class="movie-description">@room.Name</p></td>
                    <td><p class="">@room.Capacity</p></td>
                    <td><p class="">@room.RoomType?.TypeName</p></td>
                    <td>
                        <div class="actions">
                            <button><i class="bi bi-eye-fill"></i></button>
                            <button><i class="bi bi-pencil-square"></i></button>
                            <button><i class="bi bi-trash3-fill"></i></button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="7">Tổng kết</td>
            </tr>
        </tfoot>
    </table>
</div>
