@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model List<DoAn.Models.Booking.Showtime>
<div class="admin-page">
    <!-- Tiêu đề -->
    <div class="admin-header">
        <h2 class="admin-title">Quản lý suất chiếu</h2>
    </div>
    <!-- Thanh công cụ -->
    <div class="admin-toolbar">
        <div class="filter-group">
            <form method="get">
                <select class="filter-item" name="branchId" onchange="this.form.submit()">
                    <option value="">
                        Tất cả chi nhánh
                    </option>
                    @foreach (var b in ViewBag.Branches)
                    {
                        <option value="@b.BranchId" selected=@(ViewBag.SelectedBranchId == b.BranchId)>
                            @b.Name
                        </option>
                    }
                </select>
            </form>
        </div>
        <div class="action-group">
            <a asp-action="Create" asp-controller="Showtimes" asp-area="Admin" class="btn btn--primary">Thêm mới</a>
        </div>
    </div>

    <!-- Bảng dữ liệu -->
    <table class="table table--dark">
        <thead>
            <tr>
                <th><input type="checkbox" name="name" value="false" /></th>
                <th>Tên phim</th>
                <th>Tên phòng</th>
                <th>Bắt đầu lúc</th>
                <th>Kết thúc lúc</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var showtime in Model)
            {
                <tr>
                    <td><input type="checkbox" name="name" value="false" /></td>
                    <td><p>@showtime.Movie.Title</p></td>
                    <td><p>@showtime.Room.Name</p></td>
                    <td><p>@showtime.StartTime.ToString("HH:mm - dd/MM/yyyy")</p></td>
                    <td><p>@showtime.EndTime.ToString("HH:mm - dd/MM/yyyy")</p></td>
                    <td>
                        <div class="actions">
                            <button><i class="bi bi-eye-fill"></i></button>
                            <button><i class="bi bi-pencil-square"></i></button>
                            <button><i class="bi bi-trash3-fill"></i></button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="7">
                    <div class="pagination">
                        @if (ViewBag.CurrentPage > 1)
                        {
                            <a href="?page=@(ViewBag.CurrentPage - 1)&branchId=@ViewBag.SelectedBranchId">« Prev</a>
                        }

                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            if (i == ViewBag.CurrentPage)
                            {
                                <span style="font-weight:bold">@i</span>
                            }
                            else
                            {
                                <a href="?page=@i&branchId=@ViewBag.SelectedBranchId">@i</a>
                            }
                        }

                        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                        {
                            <a href="?page=@(ViewBag.CurrentPage + 1)&branchId=@ViewBag.SelectedBranchId">Next »</a>
                        }
                    </div>
                </td>
            </tr>
        </tfoot>
    </table>
</div>