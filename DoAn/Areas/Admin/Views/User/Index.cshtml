@model List<DoAn.Models.Accounts.User>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="admin-page">
    <!-- Tiêu đề -->
    <div class="admin-header">
        <h2 class="admin-title">Quản lý người dùng</h2>
    </div>

    <!-- Thanh công cụ -->
    <div class="admin-toolbar">
        <div class="filter-group">
            <div class="filter-item">Tất cả</div>
            <div class="filter-item">Trạng thái</div>
            <div class="filter-item">Sắp xếp</div>
        </div>
        <div class="action-group">
            <button class="btn btn--primary">Thêm mới</button>
        </div>
    </div>

    <!-- Bảng dữ liệu -->
    <table class="table table--dark">
        <thead>
            <tr>
                <th><input type="checkbox" name="name" value="false" /></th>
                <th>Họ và tên</th>
                <th>Số điện thoại</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td><input type="checkbox" name="name" value="false" /></td>
                    <td><p>@user.FullName</p></td>
                    <td><p>@user.Phone</p></td>
                    <td>
                        <div class="actions">
                            <button><i class="bi bi-eye-fill"></i></button>
                            <button><i class="bi bi-pencil-square"></i></button>
                            <button><i class="bi bi-trash3-fill"></i></button>
                        </div>
                    </td>
                </tr>
            }
            
        </tbody>
        <tfoot>
            <tr>
                <td colspan="7">Tổng kết</td>
            </tr>
        </tfoot>
    </table>
</div>
