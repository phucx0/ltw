<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />

    <!-- SEO Meta Tags -->
    <title>@ViewData["Title"] - Đặt Vé Xem Phim Online</title>
    <meta name="description" content="Đặt vé xem phim online nhanh chóng, tiện lợi. Xem lịch chiếu phim mới nhất, giá vé ưu đãi tại các rạp chiếu phim trên toàn quốc." />
    <meta name="keywords" content="đặt vé xem phim, mua vé xem phim online, lịch chiếu phim, rạp chiếu phim, phim mới, vé rạp giá rẻ" />
    <meta name="author" content="DoAn Cinema" />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph Meta Tags (Facebook, LinkedIn) -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="DoAn Cinema" />
    <meta property="og:title" content="@(ViewData["OgTitle"] ?? ViewData["Title"] + " - Đặt Vé Xem Phim Online")" />
    <meta property="og:description" content="@(ViewData["OgDescription"] ?? "Đặt vé xem phim online nhanh chóng, tiện lợi. Xem lịch chiếu phim mới nhất tại DoAn Cinema.")" />
    <meta property="og:image" content="@(ViewData["OgImage"] ?? Url.Content("~/images/og-default.jpg"))" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:url" content="@(Context.Request.Scheme)://@(Context.Request.Host)@(Context.Request.Path)" />
    <meta property="og:locale" content="vi_VN" />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="@(ViewData["OgTitle"] ?? ViewData["Title"] + " - Đặt Vé Xem Phim Online")" />
    <meta name="twitter:description" content="@(ViewData["OgDescription"] ?? "Đặt vé xem phim online nhanh chóng, tiện lợi tại DoAn Cinema.")" />
    <meta name="twitter:image" content="@(ViewData["OgImage"] ?? Url.Content("~/images/og-default.jpg"))" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="~/images/apple-touch-icon.png" />

    <!-- Canonical URL -->
    <link rel="canonical" href="@(Context.Request.Scheme)://@(Context.Request.Host)@(Context.Request.Path)" />

    <!-- Stylesheets -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DoAn.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/landing_page.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/movie/movies.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <partial name="Components/_Header" />
    @* <partial name="Components/_SideBar" /> *@
    
    <main class="main-layout">
        <div role="main" class="">
            @RenderBody()
        </div>
    </main>
    <footer>
        <div class="logo text-white fw-bold fs-3">
            CINEMA
        </div>
        <div class="footer-link-wrapper">
            <ul>
