@{
    ViewData["Title"] = "Danh sách phim";
}

<h1>🔥 Đây là trang MoviesList Index</h1>

<h2>🎬 Phim nổi bật</h2>
<div class="row">
    @foreach (DoAn.Models.Movies.Movie movie in ViewBag.Featured)
    {
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm">
                <img src="@movie.PosterUrl" class="card-img-top" alt="@movie.Title">
                <div class="card-body">
                    <h5 class="card-title">@movie.Title</h5>
                    <p class="card-text">@movie.Description</p>
                    <p><small>Ngày phát hành: @movie.ReleaseDate.ToShortDateString()</small></p>
                    @if (movie.ImdbRating.HasValue)
                    {
                        <p><strong>IMDb:</strong> @movie.ImdbRating</p>
                    }
                </div>
            </div>
        </div>
    }
</div>

<h2>🎥 Đang chiếu</h2>
<div class="row">
    @foreach (DoAn.Models.Movies.Movie movie in ViewBag.Showing)
    {
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm">
                <img src="@movie.PosterUrl" class="card-img-top" alt="@movie.Title">
                <div class="card-body">
                    <h5 class="card-title">@movie.Title</h5>
                    <p class="card-text">@movie.Description</p>
                </div>
            </div>
        </div>
    }
</div>

<h2>🍿 Sắp chiếu</h2>
<div class="row">
    @foreach (DoAn.Models.Movies.Movie movie in ViewBag.Upcoming)
    {
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm">
                <img src="@movie.PosterUrl" class="card-img-top" alt="@movie.Title">
                <div class="card-body">
                    <h5 class="card-title">@movie.Title</h5>
                    <p class="card-text">@movie.Description</p>
                </div>
            </div>
        </div>
    }
</div>
